<h2>Admin Books</h2>

<table>
  <thead>
    <tr>
      <th><a href="?sort_by=publisher_id">Publisher</a></th>
      <th><a href="?sort_by=title">Title</a></th>
      <th><a href="?sort_by=isbn">ISBN</a></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%=h book.publisher.name %></td>
        <td><%=h book.title %></td>
        <td><%=h book.isbn %></td>
        <td><%= link_to "#{book.title}", admin_book_path(book) %></td>
        <td><%= link_to 'Edit', edit_admin_book_path(book) %></td>
        <td><%= link_to 'Destroy', admin_book_path(book), data: { turbo_method: :delete, confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Book', new_admin_book_path %>
