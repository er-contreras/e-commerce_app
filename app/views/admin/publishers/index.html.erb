<h1>Publishers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= link_to "#{publisher.name}", admin_publisher_path(publisher) %></td>
        <td><%= link_to 'Edit', edit_admin_publisher_path(publisher) %></td>
        <td><%= link_to 'Destroy', admin_publisher_path(publisher), data: { "turbo-method": :delete, confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Publisher', new_admin_publisher_path %>
